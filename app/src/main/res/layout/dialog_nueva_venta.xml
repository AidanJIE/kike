<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Libro a vender *"
        android:textColor="#000000"
        android:layout_marginBottom="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/et_libro_venta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Escriba el tÃ­tulo del libro"
            android:textColor="#000000"
            android:textColorHint="#757575"
            android:padding="12dp"
            />

        <Button
            android:id="@+id/btn_buscar_libro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”"
            android:layout_marginLeft="8dp"
            android:padding="12dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_stock_disponible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stock: --"
        android:textColor="#757575"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cantidad *"
        android:textColor="#000000"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/et_cantidad_venta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ej: 2"
        android:inputType="number"
        android:textColor="#000000"
        android:textColorHint="#757575"
        android:padding="12dp"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio unitario *"
        android:textColor="#000000"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/et_precio_venta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ej: 299.99"
        android:inputType="numberDecimal"
        android:textColor="#000000"
        android:textColorHint="#757575"
        android:padding="12dp"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cliente (opcional)"
        android:textColor="#000000"
        android:layout_marginBottom="4dp"/>

    <EditText
        android:id="@+id/et_cliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del cliente"
        android:textColor="#000000"
        android:textColorHint="#757575"
        android:padding="12dp"
        />

</LinearLayout>